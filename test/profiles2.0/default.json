{
    "rules": [
        "default"
    ],
    "fixtures": [
        {
            "object": "swagger",
            "tests": [
                {
                    "input": {
                        "swagger": 2
                    },
                    "expectValid": false,
                    "expectedRuleErrors": [
                        "base-path-exists"
                    ]
                },
                {
                    "input": {
                        "swagger": 2,
                        "basePath": "/"
                    },
                    "expectValid": false,
                    "expectedRuleErrors": [
                        "base-path-trailing-slash"
                    ]
                },
                {
                    "input": {
                        "swagger": 2,
                        "basePath": "/abc"
                    },
                    "expectValid": true
                }
            ]
        },
        {
            "object": "info",
            "tests": [
                {
                    "input": {},
                    "expectedRuleErrors": [
                        "info-contact",
                        "info-title",
                        "info-description",
                        "info-terms-of-service"
                    ]
                },
                {
                    "input": {
                        "contact": {}
                    },
                    "expectedRuleErrors": [
                        "info-contact",
                        "info-title",
                        "info-description",
                        "info-terms-of-service"
                    ]
                },
                {
                    "input": {},
                    "skip": [
                        "info-contact",
                        "info-title",
                        "info-description",
                        "info-terms-of-service"
                    ],
                    "expectValid": true
                },
                {
                    "input": {
                        "contact": {
                            "foo": "bar"
                        },
                        "title": "abc",
                        "description": "xyz",
                        "termsOfService": "abc"
                    },
                    "expectValid": true
                }
            ]
        },
        {
            "object": "reference",
            "tests": [
                {
                    "input": {
                        "$ref": "./foo.yml"
                    },
                    "expectValid": true
                },
                {
                    "input": {
                        "$ref": "./foo.yml",
                        "something": "else"
                    },
                    "expectedRuleErrors": [
                        "reference-no-other-properties"
                    ]
                },
                {
                    "input": {
                        "$ref": "parameters.yml#/roomId"
                    },
                    "expectedRuleErrors": []
                },
                {
                    "input": {
                        "$ref": "./parameters.yml#/roomId"
                    },
                    "expectValid": true
                }
            ]
        },
        {
            "object": "operation",
            "tests": [
                {
                    "input": {},
                    "expectedRuleErrors": [
                        "operation-operationId",
                        "operation-summary-or-description",
                        "operation-tags"
                    ]
                },
                {
                    "input": {
                        "summary": "thing",
                        "operationId": "thing",
                        "description": "foo <script> bla"
                    },
                    "expectedRuleErrors": [
                        "operation-tags",
                        "no-script-tags-in-markdown"
                    ]
                },
                {
                    "input": {
                        "summary": "thing",
                        "operationId": "thing",
                        "tags": [
                            {
                                "name": "thing"
                            }
                        ]
                    },
                    "expectValid": true
                }
            ]
        },
        {
            "object": "example",
            "tests": [
                {
                    "input": {
                        "summary": "User Example"
                    },
                    "expectedRuleErrors": [
                        "example-value-or-externalValue"
                    ]
                },
                {
                    "input": {
                        "summary": "User Example",
                        "value": {
                            "foo": "bar"
                        }
                    },
                    "expectValid": true
                },
                {
                    "input": {
                        "summary": "User Example",
                        "externalValue": "http://foo.bar/examples/user-example.json"
                    },
                    "expectValid": true
                }
            ]
        }
    ]
}
